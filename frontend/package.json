{
  "name": "rails-migration-assistant-frontend",
  "version": "2.0.0",
  "description": "Modern Electron frontend for Rails Migration Assistant",
  "main": "main.js",
  "author": "Mohammed Hassan",
  "license": "MIT",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run dev:react\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "start:prod": "electron .",
    "dev": "concurrently \"npm run dev:react\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "dev:react": "vite",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "test": "vitest",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.2.0",
    "cross-env": "^10.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "@ant-design/icons": "^5.2.0",
    "@monaco-editor/react": "^4.7.0",
    "ace-builds": "^1.43.2",
    "antd": "^5.12.0",
    "axios": "^1.6.0",
    "monaco-editor": "^0.52.2",
    "prismjs": "^1.30.0",
    "react": "^18.2.0",
    "react-ace": "^14.0.1",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "react-simple-code-editor": "^0.14.1",
    "zustand": "^4.4.0"
  },
  "build": {
    "appId": "com.railsmigration.assistant",
    "productName": "Rails Migration Assistant",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "main.js",
      "preload.js",
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
